{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(deps)",
    ":semanticCommitScopeDisabled",
    ":disableRateLimiting",
    ":disableDependencyDashboard",
    ":docker",
    ":timezone(Europe/Berlin)",
    ":enableVulnerabilityAlertsWithLabel(kind/security)"
  ],
  "labels": [
    "kind/dependencies"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance"
      ],
      "addLabels": [
        "approved"
      ]
    },
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance"
      ],
      "automerge": true,
      "matchPackageNames": [
        "ckotzbauer/actions-toolkit"
      ]
    },
    {
      "updateTypes": [
        "major",
        "rollback",
        "bump"
      ],
      "reviewers": [
        "ckotzbauer"
      ]
    }
  ],
  "updateNotScheduled": false,
  "hostRules": [
    {
      "matchHost": "github.com",
      "concurrentRequestLimit": 2
    },
    {
      "matchHost": "api.github.com",
      "concurrentRequestLimit": 2
    }
  ]
}
