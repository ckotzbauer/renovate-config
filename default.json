{
  "extends": [
    "config:base",
    ":semanticCommitScopeDisabled",
    ":disableRateLimiting",
    ":docker",
    ":timezone(Europe/Berlin)",
    ":enableVulnerabilityAlertsWithLabel(kind/security)"
  ],
  "labels": [
    "kind/dependencies"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest",
        "lockFileMaintenance"
      ],
      "addLabels": [
        "approved"
      ]
    },
    {
      "updateTypes": [
        "major",
        "rollback",
        "bump"
      ],
      "reviewers": [
        "ckotzbauer"
      ]
    }
  ]
}
